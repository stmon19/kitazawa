- content_for(:javascripts) { javascript_include_tag('modernizr.custom.js') }
- content_for(:javascripts) { javascript_include_tag('jquery.fittext.js') }
- content_for(:javascripts) { javascript_include_tag('boxgrid.js') }
- content_for(:stylesheets) { stylesheet_link_tag('posts.css') }

ul#rb-grid.rb-grid.clearfix
  - @posts.each do |post|
    = content_tag(:li, class: width_klass_by_image_aspect_retio(post.horizontal_image?))
      .row
        .col-md-12
          = image_tag post.image.thumbnail.url
      .event_information
        h3.cramp = post.title
        .venue.cramp
          span = post.venue
        .date
          span = l(post.event_start_at.to_date, format: :simple)
          span.separator 〜
          span = l(post.event_end_at.to_date, format: :simple)

      .rb-overlay
        span.rb-close close
        .rb-week
          div
            span.rb-city
              | Lisbon
              span.icon-clima-1
              span
                | 21°C
          div
            span Mon
            span.icon-clima-1
            span 19°C
