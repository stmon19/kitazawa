<% content_for :body_content_title do %>
  <%= @work.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @work.title %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @work.image, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @work.description %>
    </p>
  </section>
  <section>
    <h1>Material</h1>
    <p>
      <%=raw @work.material %>
    </p>
  </section>
  <section>
    <h1>Size</h1>
    <p>
      <%=raw @work.size %>
    </p>
  </section>
  <section>
    <h1>Completed At</h1>
    <p>
      <%=raw @work.completed_at %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="works">
      <% @works.each do |work| %>
        <li>
          <%= link_to work.title, refinery.works_work_path(work) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
